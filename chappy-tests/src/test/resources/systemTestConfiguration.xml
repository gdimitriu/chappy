 <configurations>
	<configuration>
  		<name>rest</name>
  		<property>
  			<name>port</name>
  			<value>8099</value>
  		</property>
	</configuration>
	<persistence>
		<persistenceUnit>default</persistenceUnit>
		<framework>datanucleus</framework>
		<feature>
			<plugin>ODF</plugin>
			<property>
				<name>javax.jdo.option.ConnectionURL</name>
				<value>odf:file:d:\chappy.ods</value>
			</property>
			<property>
				<name>javax.jdo.option.Mapping</name>
				<value>odf</value>
			</property>
		</feature>
	</persistence>
	<persistence>
		<persistenceUnit>SystemLog</persistenceUnit>
		<framework>datanucleus</framework>
		<feature>
			<plugin>ODF</plugin>
			<property>
				<name>javax.jdo.option.ConnectionURL</name>
				<value>odf:file:d:\chappylogs.ods</value>
			</property>
			<property>
				<name>javax.jdo.option.Mapping</name>
				<value>odf</value>
			</property>
			<property>
				<name>datanucleus.autoCreateSchema</name>
				<value>true</value>
			</property>
			<property>
				<name>datanucleus.autoCreateTables</name>
				<value>true</value>
			</property>
			<property>
				<name>datanucleus.autoCreateColumns</name>
				<value>true</value>
			</property>
		</feature>
	</persistence>
	<persistence>
		<persistenceUnit>SystemUpgrade</persistenceUnit>
		<framework>datanucleus</framework>
		<feature>
			<plugin>ODF</plugin>
			<property>
				<name>javax.jdo.option.ConnectionURL</name>
				<value>odf:file:d:\chappyupgrade.ods</value>
			</property>
			<property>
				<name>javax.jdo.option.Mapping</name>
				<value>odf</value>
			</property>
			<property>
				<name>datanucleus.autoCreateSchema</name>
				<value>true</value>
			</property>
			<property>
				<name>datanucleus.autoCreateTables</name>
				<value>true</value>
			</property>
			<property>
				<name>datanucleus.autoCreateColumns</name>
				<value>true</value>
			</property>
		</feature>
	</persistence>
	<persistence>
		<persistenceUnit>SystemFlow</persistenceUnit>
		<framework>datanucleus</framework>
		<feature>
			<plugin>ODF</plugin>
			<property>
				<name>javax.jdo.option.ConnectionURL</name>
				<value>odf:file:d:\chappyflow.ods</value>
			</property>
			<property>
				<name>javax.jdo.option.Mapping</name>
				<value>odf</value>
			</property>
			<property>
				<name>datanucleus.autoCreateSchema</name>
				<value>true</value>
			</property>
			<property>
				<name>datanucleus.autoCreateTables</name>
				<value>true</value>
			</property>
			<property>
				<name>datanucleus.autoCreateColumns</name>
				<value>true</value>
			</property>
		</feature>
	</persistence>
</configurations>
